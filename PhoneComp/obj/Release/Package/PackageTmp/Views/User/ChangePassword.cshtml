@model PhoneComp.Models.Member
@{
    ViewBag.Title = "更改密码";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}

<ol class="breadcrumb">
    <li><a href="/Home/Index">Home</a></li>
    <li><a href="/User/Index">管理员列表</a></li>
    <li class="avtive">更改密码</li>
</ol>
<div class="panel panel-default">
    <div class="panel-heading">
        <h2>更改密码</h2>
    </div>
    <div class="panel-body">      
        @if (ViewBag.errorMsg != null)
        {
            <div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <strong>Tips!</strong> @ViewBag.errorMsg
            </div>
        }  
        <form class="form-horizontal" id="cpwdform" name="cpwdform" action="" method="post" role="form">
            <div class="form-group">
                <label class="col-sm-2 control-label" for="RoleID">角色</label>
                <div class="col-sm-8">
                    <span class="label label-default" id="RoleName">@Model.Role.RoleName</span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="UserName">用户名</label>
                <div class="col-sm-8">
                    <span class="label label-default" id="UserName">@Model.UserName</span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="Password">密码</label>
                <div class="col-sm-8">
                    <input type="password" class="form-control validate[required,minSize[6]]" id="Password" name="Password" value="" placeholder="密码">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="Password">确认密码</label>
                <div class="col-sm-8">
                    <input type="password" class="form-control validate[required,equals[Password]]" id="RePassword" name="RePassword" value="" placeholder="确认密码">
                </div>
            </div>
            <div >
                <div class="center-block col-sm-6" style=" float: none; ">
                    <input type="hidden" name="MemberID" id="MemberID" value="@Model.MemberID" />
                    <input type="button" id="submit" class="btn btn-primary" value="确认更改" />
                    <a class="btn btn-default" href="/User/Index">取消</a>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#submit").click(function () {
            submitForm("cpwdform", "/User/ChangePassword", $("#cpwdform").serialize());
        });

        myFormValidation("cpwdform");
    });
</script>

