@model PhoneComp.Models.Contact

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Contact</legend>

        @Html.HiddenFor(model => model.ContactID)

        <div class="editor-label">
            @Html.LabelFor(model => model.SuspectID, "Suspects")
        </div>
        <div class="editor-field">
            @Html.DropDownList("SuspectID", String.Empty)
            @Html.ValidationMessageFor(model => model.SuspectID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LinkerName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LinkerName)
            @Html.ValidationMessageFor(model => model.LinkerName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LinkerMobile)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LinkerMobile)
            @Html.ValidationMessageFor(model => model.LinkerMobile)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsDeleted)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsDeleted)
            @Html.ValidationMessageFor(model => model.IsDeleted)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
